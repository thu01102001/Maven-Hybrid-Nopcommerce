<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="NopCommerce UI Automation" verbose="1" >
    <parameter name="appUrl" value="http://localhost/"></parameter>

    <test name="Run on Chrome browser" >
        <parameter name="browser" value="Chrome" />
        <classes>
            <class name="nopcommerce.users.Level_03_Multiple_Browser" />
        </classes>
    </test>

    <test name="Run on Edge browser" >
        <parameter name="browser" value="Edge" />
        <classes>
            <class name="nopcommerce.users.Level_03_Multiple_Browser" />
        </classes>
    </test>

    <test name="Run on Firefox browser" >
        <parameter name="browser" value="Firefox" />
        <classes>
            <class name="nopcommerce.users.Level_03_Multiple_Browser" />
        </classes>
    </test>

</suite>